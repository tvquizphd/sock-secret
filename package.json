    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsup": "^6.3.0",
    "typescript": "^4.8.2"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@octokit/request": "^6.2.3",
    "@octokit/request-error": "^3.0.3",
    "libsodium-wrappers": "0.7.8"
  },
  "jest": {
    "preset": "ts-jest",
